{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "esModuleInterop" : true,
    "checkJs":true,
    "allowUmdGlobalAccess" : true,
    "allowJs" : true,
    "newLine" : "lf",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noImplicitAny": false
  }
}
